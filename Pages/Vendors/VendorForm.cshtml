@page "{rowGuid?}"
@using Indotalent.Models.Enums
@model Indotalent.Pages.Vendors.VendorFormModel
@{
    Layout = "~/Pages/Shared/AdminLTE/_Admin.cshtml";
    var statusMessage = Model.StatusMessage;
    Model.StatusMessage = string.Empty;
}

<div class="form-card">
    <form id="formMain" method="post" novalidate="">
        <input type="hidden" asp-for="@Model.VendorForm.RowGuid" />
        <input type="hidden" asp-for="@Model.VendorForm.Id" />
        <div class="form-card-body">

            <p class="small-italic-left">General</p>
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        @if (!string.IsNullOrEmpty(Model.Number))
                        {
                            <h1>@Model.Number</h1>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Name" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.Name" />
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Description" class="form-label"></label>
                            <textarea asp-for="@Model.VendorForm.Description" class="form-control" rows="6"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.VendorGroupId" class="form-label"></label>
                            <select asp-for="@Model.VendorForm.VendorGroupId" asp-items="@Model.VendorGroupLookup" class="form-control">
                                <option value="">-- Select Group --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.VendorCategoryId" class="form-label"></label>
                            <select asp-for="@Model.VendorForm.VendorCategoryId" asp-items="@Model.VendorCategoryLookup" class="form-control">
                                <option value="">-- Select Category --</option>
                            </select>
                        </div>
                    </div>
                </div>
            </fieldset>
            <p class="small-italic-left">Address</p>
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Street" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.Street" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.ZipCode" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.ZipCode" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.City" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.City" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Country" class="form-label"></label>
                            <select asp-for="@Model.VendorForm.Country" asp-items="@Model.CountryLookup" class="form-control">
                                <option value="">-- Select Country --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.State" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.State" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </fieldset>


            <p class="small-italic-left">Communications</p>
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.PhoneNumber" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.PhoneNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.EmailAddress" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.EmailAddress" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.FaxNumber" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.FaxNumber" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Website" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.Website" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.WhatsApp" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.WhatsApp" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </fieldset>


            <p class="small-italic-left">Social Media</p>
            <fieldset>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.LinkedIn" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.LinkedIn" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Facebook" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.Facebook" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.TwitterX" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.TwitterX" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.Instagram" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.Instagram" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.VendorForm.TikTok" class="form-label"></label>
                            <input asp-for="@Model.VendorForm.TikTok" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>
            </fieldset>

        </div>
        <div class="form-card-footer">
            <button type="submit" id="btnSubmit" class="e-btn e-control @(Model.Action == "delete" ? "e-danger" : "")">@(Model.Action == "delete" ? "Delete" : "Submit")</button>
        </div>

    </form>


    @if (!string.IsNullOrEmpty(Model.Number))
    {
        <p class="small-italic-left">Contact</p>
        <fieldset>
            <div class="row">
                <div class="col-md-12">
                    <div id="Grid"></div>
                </div>
            </div>
        </fieldset>
    }


</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            

            showStatusMessage('@statusMessage');

            new ej.inputs.TextBox({}, '#VendorForm_Name');
            new ej.inputs.TextBox({}, '#VendorForm_Description');
            new ej.inputs.TextBox({}, '#VendorForm_Street');
            new ej.inputs.TextBox({}, '#VendorForm_City');
            new ej.inputs.TextBox({}, '#VendorForm_State');
            new ej.inputs.TextBox({}, '#VendorForm_ZipCode');
            new ej.dropdowns.DropDownList({ allowFiltering: true }, '#VendorForm_VendorGroupId');
            new ej.dropdowns.DropDownList({ allowFiltering: true }, '#VendorForm_VendorCategoryId');
            new ej.dropdowns.DropDownList({ allowFiltering: true }, '#VendorForm_Country');
            new ej.inputs.TextBox({}, '#VendorForm_PhoneNumber');
            new ej.inputs.TextBox({}, '#VendorForm_FaxNumber');
            new ej.inputs.TextBox({}, '#VendorForm_WhatsApp');
            new ej.inputs.TextBox({}, '#VendorForm_EmailAddress');
            new ej.inputs.TextBox({}, '#VendorForm_Website');
            new ej.inputs.TextBox({}, '#VendorForm_LinkedIn');
            new ej.inputs.TextBox({}, '#VendorForm_Facebook');
            new ej.inputs.TextBox({}, '#VendorForm_TwitterX');
            new ej.inputs.TextBox({}, '#VendorForm_Instagram');
            new ej.inputs.TextBox({}, '#VendorForm_TikTok');
            new ej.buttons.Button({ isPrimary: true }, '#btnSubmit');

            var validationOptions = {
                rules: {
                    'VendorForm.Name': { required: true },
                    'VendorForm.VendorGroupId': { required: true },
                    'VendorForm.VendorCategoryId': { required: true },
                }
            }

            var formValidator = new ej.inputs.FormValidator('#formMain', validationOptions);
            var formElement = document.getElementById('formMain');
            formElement.addEventListener('submit', function (e) {
                e.preventDefault();
                if (formValidator.validate()) {
                    formElement.submit();
                }
            })

        });
    </script>



    <script>

        var gridContainer = document.getElementById('Grid');
        if (gridContainer) {
            var grid = new ej.grids.Grid({
                dataSource: new ej.data.DataManager({
                    url: '/odata/VendorContactChild',
                    adaptor: new ej.data.ODataV4Adaptor(),
                    headers: [
                        { ParentId: "@Model.VendorForm.Id" }
                    ]
                }),
                editSettings: { allowEditing: true, allowAdding: true, allowDeleting: true, showDeleteConfirmDialog: true, mode: 'Normal' },
                allowFiltering: false,
                allowSorting: false,
                allowSelection: true,
                allowGrouping: false,
                allowTextWrap: true,
                allowResizing: false,
                allowPaging: false,
                allowExcelExport: true,
                filterSettings: { type: 'CheckBox' },
                selectionSettings: { persistSelection: true, type: 'Single' },
                autoFit: false,
                showColumnMenu: false,
                gridLines: 'Horizontal',
                columns: [
                    { type: 'checkbox', width: 100 },
                    { field: 'Id', isPrimaryKey: true, headerText: 'Id', visible: false },
                    { field: 'Name', width: 100, validationRules: { required: true } },
                    { field: 'Number', width: 100, allowEditing: false },
                    { field: 'JobTitle', width: 100 },
                    { field: 'PhoneNumber', width: 100 },
                    { field: 'EmailAddress', width: 100 },
                ],
                toolbar: [
                    'ExcelExport',
                    { type: 'Separator' },
                    'Add', 'Edit', 'Delete', 'Update', 'Cancel'
                ],
                beforeDataBound: () => {
                },
                dataBound: function () {
                },
                excelExportComplete: () => {
                },
                rowSelected: () => {
                },
                rowDeselected: () => {
                },
                rowSelecting: () => {
                    if (grid.getSelectedRecords().length) {
                        grid.clearSelection();
                    }
                },
                toolbarClick: (args) => {
                    if (args.item.id === 'Grid_excelexport') {
                        grid.excelExport();
                    }
                },
                actionComplete: (args) => {

                    if (args.requestType === 'save' || args.requestType === 'delete') {

                        let message = 'Delete Process Success';

                        switch (args.action) {
                            case 'add':
                                message = 'Add Process Success';
                                break;
                            case 'edit':
                                message = 'Edit Process Success';
                                break;
                            default:
                                break;
                        }

                        new ej.notifications.Toast({
                            content: message,
                            cssClass: "e-toast-success",
                            icon: 'e-success toast-icons',
                            position: { X: "Center", Y: "Bottom" }
                        }, '#SFToast').show();
                    }
                }
            });


            grid.appendTo('#Grid');
        }

    </script>

}
