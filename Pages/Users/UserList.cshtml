@page
@model Indotalent.Pages.Users.UserListModel
@{
    Layout = "~/Pages/Shared/AdminLTE/_Admin.cshtml";
    ViewData["Module"] = "Settings";
}



<div class="row">
    <div class="col-12">
        <div id="Grid"></div>
    </div>
</div>

@section Scripts {
    <script>


        document.addEventListener('DOMContentLoaded', function () {

            var grid = new ej.grids.Grid({
                dataSource: new ej.data.DataManager({
                    url: '/odata/ApplicationUser',
                    adaptor: new ej.data.ODataV4Adaptor()
                }),
                allowFiltering: true,
                allowSorting: true,
                allowSelection: true,
                allowGrouping: true,
                allowTextWrap: true,
                allowResizing: true,
                allowPaging: true,
                allowExcelExport: true,
                filterSettings: { type: 'CheckBox' },
                sortSettings: { columns: [{ field: 'CreatedAtUtc', direction: 'Descending' }] },
                pageSettings: { currentPage: 1, pageSize: 20, pageSizes: ["10", "20", "50", "100", "200", "All"] },
                selectionSettings: { persistSelection: true, type: 'Single' },
                autoFit: true,
                showColumnMenu: true,
                gridLines: 'Horizontal',
                columns: [
                    { type: 'checkbox', width: 100 },
                    {
                        field: 'Id', isPrimaryKey: true, headerText: 'Id', visible: false
                    },
                    { field: 'CreatedAtUtc', width: 100, format: 'yyyy-MM-dd HH:ss', textAlign: 'Left', type: 'dateTime' },
                    { field: 'FullName', width: 100 },
                    { field: 'JobTitle', width: 100 },
                    { field: 'Address', width: 100 },
                    { field: 'City', width: 100 },
                    { field: 'State', width: 100 },
                    { field: 'Country', width: 100 },
                    { field: 'ZipCode', width: 100 },
                    { field: 'UserType', width: 100 },
                    { field: 'EmailConfirmed', width: 100, textAlign: 'Center', displayAsCheckBox: true, type: 'boolean' },
                    { field: 'IsDefaultAdmin', width: 100, textAlign: 'Center', displayAsCheckBox: true, type: 'boolean' },
                    { field: 'IsOnline', width: 100, textAlign: 'Center', displayAsCheckBox: true, type: 'boolean' },
                    { field: 'SelectedCompany', width: 100 },
                ],
                toolbar: [
                    'ExcelExport', 'Search',
                    { type: 'Separator' },
                    { text: 'Add', tooltipText: 'Add', prefixIcon: 'e-add', id: 'AddCustom' },
                    { text: 'Edit', tooltipText: 'Edit', prefixIcon: 'e-edit', id: 'EditCustom' },
                    { text: 'Delete', tooltipText: 'Delete', prefixIcon: 'e-delete', id: 'DeleteCustom' },
                    { type: 'Separator' },
                    { text: 'Change Password', tooltipText: 'Change Password', id: 'ChangePasswordCustom' },
                    { text: 'Change Avatar', tooltipText: 'Change Avatar', id: 'ChangeAvatarCustom' },
                ],
                beforeDataBound: () => {
                },
                dataBound: function () {
                    grid.toolbarModule.enableItems(['EditCustom', 'DeleteCustom', 'ChangePasswordCustom', 'ChangeAvatarCustom'], false);
                    grid.autoFitColumns(['CreatedAtUtc', 'FullName', 'JobTitle', 'Address', 'City', 'State', 'Country', 'ZipCode', 'UserType', 'EmailConfirmed', 'IsDefaultAdmin', 'IsOnline', 'SelectedCompany']);
                },
                excelExportComplete: () => {
                },
                rowSelected: () => {
                    if (grid.getSelectedRecords().length == 1) {
                        grid.toolbarModule.enableItems(['EditCustom', 'DeleteCustom', 'ChangePasswordCustom', 'ChangeAvatarCustom'], true);
                    } else {
                        grid.toolbarModule.enableItems(['EditCustom', 'DeleteCustom', 'ChangePasswordCustom', 'ChangeAvatarCustom'], false);
                    }
                },
                rowDeselected: () => {
                    if (grid.getSelectedRecords().length == 1) {
                        grid.toolbarModule.enableItems(['EditCustom', 'DeleteCustom', 'ChangePasswordCustom', 'ChangeAvatarCustom'], true);
                    } else {
                        grid.toolbarModule.enableItems(['EditCustom', 'DeleteCustom', 'ChangePasswordCustom', 'ChangeAvatarCustom'], false);
                    }
                },
                rowSelecting: () => {
                    if (grid.getSelectedRecords().length) {
                        grid.clearSelection();
                    }
                },
                toolbarClick: (args) => {
                    if (args.item.id === 'Grid_excelexport') {
                        grid.excelExport();
                    }

                    if (args.item.id === 'AddCustom') {
                        var formUrl = '/Users/UserForm' + '?action=create';
                        window.location.href = formUrl;
                    }

                    if (args.item.id === 'EditCustom') {
                        if (grid.getSelectedRecords().length) {
                            var selectedId = grid.getSelectedRecords()[0].Id;
                            var formUrl = '/Users/UserForm?id=' + selectedId + '&action=edit';
                            window.location.href = formUrl;
                        }
                    }

                    if (args.item.id === 'DeleteCustom') {
                        if (grid.getSelectedRecords().length) {

                            dialogObj = ej.popups.DialogUtility.confirm({
                                title: ' Delete Items',
                                content: "Are you sure you want to permanently delete these items?",
                                okButton: {
                                    click: () => {
                                        dialogObj.hide();
                                        var selectedId = grid.getSelectedRecords()[0].Id;
                                        var formUrl = '/Users/UserForm?id=' + selectedId + '&action=delete';
                                        window.location.href = formUrl;
                                    }
                                },
                                cancelButton: { click: () => { dialogObj.hide(); } },
                                position: { X: 'center', Y: 'center' },
                                closeOnEscape: true
                            });

                        }
                    }

                    if (args.item.id === 'ChangePasswordCustom') {
                        if (grid.getSelectedRecords().length) {
                            var selectedId = grid.getSelectedRecords()[0].Id;
                            var formUrl = '/Users/ChangePasswordForm?id=' + selectedId + '&action=edit';
                            window.location.href = formUrl;
                        }
                    }

                    if (args.item.id === 'ChangeAvatarCustom') {
                        if (grid.getSelectedRecords().length) {
                            var selectedId = grid.getSelectedRecords()[0].Id;
                            var formUrl = '/Users/ChangeAvatarForm?id=' + selectedId + '&action=edit';
                            window.location.href = formUrl;
                        }
                    }
                }
            });


            grid.appendTo('#Grid');

        });
    </script>
}