@page "{id?}"
@model Indotalent.Pages.UserProfiles.ChangePasswordFormModel
@{
    Layout = "~/Pages/Shared/AdminLTE/_Admin.cshtml";
    var statusMessage = Model.StatusMessage;
    Model.StatusMessage = string.Empty;
}

<div class="form-card">
    <form id="formMain" method="post" novalidate="">
        <input type="hidden" asp-for="@Model.UserForm.Id" />
        <div class="form-card-body">
            <p class="small-italic-left">General</p>
            <fieldset>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="UserForm.OldPassword" class="form-label"></label>
                            <input asp-for="UserForm.OldPassword" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="UserForm.NewPassword" class="form-label"></label>
                            <input asp-for="UserForm.NewPassword" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="UserForm.ConfirmPassword" class="form-label"></label>
                            <input asp-for="UserForm.ConfirmPassword" class="form-control" />
                        </div>
                    </div>
                </div>


            </fieldset>

        </div>
        <div class="form-card-footer">
            <button type="submit" id="btnSubmit">Submit</button>
        </div>

    </form>
</div>






@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            

            showStatusMessage('@statusMessage');

            new ej.inputs.TextBox({}, '#UserForm_OldPassword');
            new ej.inputs.TextBox({}, '#UserForm_NewPassword');
            new ej.inputs.TextBox({}, '#UserForm_ConfirmPassword');
            new ej.buttons.Button({ isPrimary: true }, '#btnSubmit');

            var validationOptions = {
                rules: {
                    'UserForm.OldPassword': { required: true },
                    'UserForm.NewPassword': { required: true },
                    'UserForm.ConfirmPassword': { required: true },
                }
            }

            var formValidator = new ej.inputs.FormValidator('#formMain', validationOptions);
            var formElement = document.getElementById('formMain');
            formElement.addEventListener('submit', function (e) {
                e.preventDefault();
                if (formValidator.validate()) {
                    formElement.submit();
                }
            })

        });
    </script>
}

